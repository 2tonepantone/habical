<%= form_with(model: @task, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration, in: 10..180, step: 10 %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
